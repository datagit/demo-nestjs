{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Attach by Process ID",
          "processId": "${command:PickProcess}",
          "request": "attach",
          "skipFiles": [
              "<node_internals>/**"
          ],
          "type": "pwa-node"
      },
      {
          "type": "node",
          "request": "launch",
          "name": "Debug Nest Framework",
          "args": [
              "${workspaceFolder}/src/main.ts"
          ],
          "runtimeArgs": [
              "--nolazy",
              "-r",
              "ts-node/register",
              "-r",
              "tsconfig-paths/register"
          ],
          "sourceMaps": true,
          "envFile": "${workspaceFolder}/.env",
          "cwd": "${workspaceRoot}",
          "console": "integratedTerminal",
          "protocol": "inspector"
      }

  ]
}